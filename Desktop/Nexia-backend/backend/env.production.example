# Production Environment Configuration
# Copy this to .env.production and fill in real values

# Application
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database
SQLALCHEMY_DATABASE_URI=postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@host:port/database

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_EXPIRE_MINUTES=15
EMAIL_VERIFICATION_EXPIRE_HOURS=24
ALGORITHM=HS256

# CORS - Set to your actual frontend domain(s)
BACKEND_CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# SMTP Configuration (for password reset emails)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=your-ses-smtp-username
SMTP_PASSWORD=your-ses-smtp-password
SMTP_SENDER=Your App <noreply@yourdomain.com>
SMTP_USE_TLS=true

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Nexia Fitness Backend
VERSION=1.0.0

# Frontend URLs
# Used to build password reset links in emails
FRONTEND_RESET_URL=https://yourdomain.com/reset-password
# Used to build email verification links in emails
FRONTEND_VERIFICATION_URL=https://yourdomain.com/verify-email

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=3/minute
RATE_LIMIT_RESET=3/hour

# Logging
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
